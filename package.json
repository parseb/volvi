{
  "name": "volvi-options-protocol",
  "version": "1.0.0",
  "private": true,
  "description": "Vincent-based options protocol with USDC-only liquidity",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "dev:frontend": "pnpm --filter @volvi/frontend dev",
    "dev:backend": "pnpm --filter @volvi/backend dev",
    "build:frontend": "pnpm --filter @volvi/frontend build",
    "build:backend": "pnpm --filter @volvi/backend build",
    "build:abilities": "pnpm --filter @volvi/abilities build"
  },
  "devDependencies": {
    "@types/node": "^22.16.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=22.16.0"
  }
}
