{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "buildCommand": "npm install -g pnpm@10.7.0 && pnpm install",
    "watchPatterns": ["src/**"]
  },
  "deploy": {
    "startCommand": "pnpm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
